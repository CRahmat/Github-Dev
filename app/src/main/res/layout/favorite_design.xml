<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/repository_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Repository Name"
                android:textColor="#424242"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/repository_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Repository Description"
                android:textColor="#636363"
                android:textSize="12dp"
                android:layout_margin="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="100dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_star"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/repository_stars"
                        android:layout_width="127dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="0"
                        android:textColor="#636363"
                        android:textSize="10dp"
                        android:paddingLeft="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_forks"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/repository_forks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#636363"
                        android:textSize="10dp"
                        android:layout_weight="10"
                        android:paddingLeft="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:id="@+id/icon_language"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/language"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/repository_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Language"
                        android:textColor="#636363"
                        android:textSize="10dp"
                        android:layout_weight="10"
                        android:paddingLeft="5dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Hapus"
                    android:textSize="7dp"
                    android:drawableRight="@drawable/ic_delete"
                    />
                <Button
                    android:id="@+id/btn_favorite_github_web"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Source Code"
                    android:textSize="7dp"
                    android:drawableRight="@drawable/ic_eyes"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E1E1"
        />


</LinearLayout>